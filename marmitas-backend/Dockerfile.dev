FROM node:18-alpine

WORKDIR /app

# Copy package.json and package-lock.json
COPY package*.json ./

# Install all dependencies (including dev dependencies)
RUN npm install

# Copy source files
COPY . .

# Set environment variables
ENV NODE_ENV=development
ENV PORT=3001

# Expose port
EXPOSE 3001

# Start development server with nodemon for hot-reloading
CMD ["npm", "run", "dev"] 