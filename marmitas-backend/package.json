{
  "name": "marmitas-backend",
  "version": "0.1.0",
  "description": "Backend API server for Marmitas application",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "start": "node dist/index.js",
    "start:dev": "node dist/index.js --env development",
    "start:test": "node dist/index.js --env test",
    "start:prod": "node dist/index.js --env production",
    "dev": "cross-env NODE_ENV=development nodemon --exec ts-node src/index.ts",
    "build": "rimraf dist && tsc",
    "build:dev": "node scripts/build-setup.js --env=development && cross-env NODE_ENV=development npm run build:with-warnings",
    "build:test": "node scripts/build-setup.js --env=test && cross-env NODE_ENV=test npm run build:with-warnings",
    "build:prod": "node scripts/build-setup.js --env=production && cross-env NODE_ENV=production npm run build",
    "build:with-warnings": "rimraf dist && tsc --project tsconfig.dev.json",
    "generate-certs": "bash ../infrastructure/scripts/generate-dev-certs.sh",
    "lint": "eslint . --max-warnings 1000",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testMatch='**/test/integration/**/*.test.ts'",
    "perf:api": "node test/performance/api/run.js",
    "perf:db": "node test/performance/db/run.js",
    "perf:ws": "node test/performance/websocket/run.js",
    "perf:collect": "node test/performance/collect-metrics.js",
    "perf:compare": "node test/performance/compare-results.js",
    "apply-rls": "node scripts/apply-rls.js",
    "db:setup:test": "node scripts/db-setup.js --env=test",
    "db:migration:test": "node scripts/test-migrations.js",
    "db:migrate": "node scripts/run-migrations.js"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.48.1",
    "bcrypt": "^5.1.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.4.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "ws": "^8.16.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.10.6",
    "@types/nodemailer": "^6.4.17",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^9.0.8",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^6.16.0",
    "@typescript-eslint/parser": "^6.16.0",
    "autocannon": "^7.15.0",
    "clinic": "^13.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "loadtest": "^8.0.7",
    "nodemon": "^3.0.2",
    "pprof": "^3.2.0",
    "rimraf": "^5.0.5",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.30.1",
    "vitest": "^3.1.1"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/test/**/*"
    ]
  }
}
